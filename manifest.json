{
	"name": "Genius Bambini",
	"version": "1.0",
	"description": "",
	"manifest_version": 2,
	"incognito": "split",
	"icons": {
		"128": "icons/128.png"
	},
	"background": {
		"persistent": true,
		"page": "background/background.html"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*.ebay.com/sch/*"
			],
			"all_frames": true,
			"js": [
				"scripts/product-data.js"
			],
			"run_at": "document_end"
		}
	],
	"permissions": [
		"cookies",
		"tabs",
		"storage",
		"https://*/*"
	]
}

